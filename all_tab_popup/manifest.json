{
  "manifest_version": 2,

  "name": "Icebox",
  "description": "Stop giving your tabs the cold shoulder every day. Put them on ice and thaw them back out when you have time for them.",
  "version": "0.1",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
}
