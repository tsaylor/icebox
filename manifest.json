{
  "manifest_version": 2,

  "name": "Icebox",
  "description": "Stop giving your tabs the cold shoulder every day. Put them on ice and thaw them back out when you have time for them.",
  "version": "1",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "chrome_url_overrides": {
    "newtab": "icebox.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "contextMenus",
    "storage"
  ]
}
